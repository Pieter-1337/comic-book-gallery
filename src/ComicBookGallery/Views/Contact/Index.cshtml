@model ComicBookGallery.Models.ContactMessage

@{
    ViewBag.Title = "Contact";
}

<head>
    <link href="~/Content/Contact.css" rel="stylesheet" type="text/css" />
</head>

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div class="Row">

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Date, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Date, "{0:d}", new { @class = "form-control"}) 
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Naam, new { @class = "control-label"})
                @Html.TextBoxFor(m => m.Naam, new { @class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label"})
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Telefoon, new { @class = "control-label"})
                @Html.TextBoxFor(m => m.Telefoon, new { @class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ContactPersoon, new { @class = "control-label"})
               
                @Html.RadioButtonFor(m => m.ContactPersoon, "Particulier") Particulier
                @Html.RadioButtonFor(m => m.ContactPersoon, "Bedrijf") Bedrijf
               
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Boodschap, new { @class="control-label"})
                @Html.TextAreaFor(m => m.Boodschap, new { @class="form-control"})
            </div>
        </div>

        <div class="col-md-12">
            <div class="pad-top">
                <button type="submit" class="btn btn-succes btn-lg margin-right">
                    <span class="glyphicon glyphicon-save"></span> Save
                </button>
                <a href="@Url.Action("Index","ComicBooks","Index")" class="btn btn-warning btn-lg">
                    <span class="glyphicon glyphicon-remove"></span> Cancel
                </a>
            </div>
        </div>
    </div>
}

